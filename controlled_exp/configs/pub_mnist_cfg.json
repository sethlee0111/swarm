{
    "dataset": "mnist",
    "intervals": [100, 100, 100],
    "repeat": 3,
    "local-set": [0,1],
    "goal-set": [0,1,2,3,4],
    "label-sets": [[2,3],[3,4,5],[4,5,6]],
    "noise-label-set-size": 2,
    "same-repeat": false,
    "number-of-data-points": 180,
    "noise-percentage": 100,
    "strategies": {
        "local": false,
        "federated": true,
        "greedy": true,
        "opportunistic": true,
        "opportunistic (high thres.)": true,
        "gradient replay": true,
        "gradient replay (high thres.)": true
    },
    "pretrained-model": "../pretrained/test_base_2nn_mnist.pickle",
    "hyperparams" : {
        "orig-lr": 0.01,
        "batch-size": 50,
        "kappa": 7,
        "offset": 0.96,
        "apply-rate": 3,
        "test-data-per-label": 800,
        "evaluation-metrics": "loss-and-accuracy",
        "similarity-threshold": 0.2
    },
    "test-data-per-label": 800
}